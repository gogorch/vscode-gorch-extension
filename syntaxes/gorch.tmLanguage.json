{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Gorch",
  "scopeName": "source.gorch",
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "include": "#directives"
    },
    {
      "include": "#operators"
    },
    {
      "include": "#strings"
    },
    {
      "include": "#numbers"
    },
    {
      "include": "#booleans"
    },
    {
      "include": "#durations"
    },
    {
      "include": "#identifiers"
    },
    {
      "include": "#punctuation"
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.gorch",
          "begin": "//",
          "end": "$"
        },
        {
          "name": "comment.block.gorch",
          "begin": "/\\*",
          "end": "\\*/"
        }
      ]
    },
    "directives": {
      "patterns": [
        {
          "name": "keyword.control.directive.gorch",
          "match": "\\b(START|FRAGMENT|REGISTER|ON_FINISH|UNFOLD|GO|WAIT|SKIP|SWITCH|CASE|OPERATOR|NO_CHECK_MISS)\\b"
        },
        {
          "name": "keyword.operator.logical.gorch",
          "match": "\\b(true|false|TRUE|FALSE|True|False)\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.arrow.gorch",
          "match": "->"
        },
        {
          "name": "keyword.operator.pipe.gorch",
          "match": "\\|"
        },
        {
          "name": "keyword.operator.at.gorch",
          "match": "@"
        },
        {
          "name": "keyword.operator.assignment.gorch",
          "match": "="
        },
        {
          "name": "keyword.operator.case.gorch",
          "match": "=>"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.gorch",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.gorch",
              "match": "\\\\."
            }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.integer.gorch",
          "match": "-?\\b\\d+\\b"
        }
      ]
    },
    "booleans": {
      "patterns": [
        {
          "name": "constant.language.boolean.gorch",
          "match": "\\b(true|false|TRUE|FALSE|True|False)\\b"
        }
      ]
    },
    "durations": {
      "patterns": [
        {
          "name": "constant.numeric.duration.gorch",
          "match": "\\b\\d+(s|ms|Âµs|h|m)\\b"
        }
      ]
    },
    "identifiers": {
      "patterns": [
        {
          "name": "variable.other.identifier.gorch",
          "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b"
        }
      ]
    },
    "punctuation": {
      "patterns": [
        {
          "name": "punctuation.definition.block.gorch",
          "match": "[{}]"
        },
        {
          "name": "punctuation.definition.array.gorch",
          "match": "[\\[\\]]"
        },
        {
          "name": "punctuation.definition.parameters.gorch",
          "match": "[()]"
        },
        {
          "name": "punctuation.separator.comma.gorch",
          "match": ","
        }
      ]
    }
  }
}
